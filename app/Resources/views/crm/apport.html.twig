{% extends 'layout.html.twig' %}

{% block content %}

    <h1 class="container-fluid">
        Liste des apports
    </h1>
    <div class="container-fluid action-buttons">
        <a href="{{ path('create_depense',  { id: 0 }) }}" class="btn btn-primary">Ajouter </a>
    </div>
    <div class="container-fluid list-container">
        <table id="document-list">
            <thead>
            <tr>
                <th>Date</th>
                <th>Libéllé</th>
                <th>Apporteur</th>
                <th>Société</th>
                <th>Montant</th>

            </tr>
            </thead>
            <tbody>
            {% for apport in apport %}
                <tr>
                    <td>{{ apport.date }}</td>
                    <td>{{ apport.libelle }}</td>
                    <td>{{ apport.apporteur }}</td>
                    <td>{{ apport.societe }}</td>
                    <td>{{ apport.montant }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block js %}

{% endblock %}

